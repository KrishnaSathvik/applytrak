# ============================================================================
# CLOUD SYNC SETTINGS (Optional)
# ============================================================================
# Enable/disable cloud sync features
REACT_APP_CLOUD_SYNC_ENABLED=true

# Auto-sync interval in minutes (default: 15)
REACT_APP_SYNC_INTERVAL=15

# Batch size for bulk operations (default: 50)
REACT_APP_SYNC_BATCH_SIZE=50

# Enable data compression for sync (default: true)
REACT_APP_SYNC_COMPRESSION=true

# ============================================================================
# ANALYTICS CONFIGURATION (Optional)
# ============================================================================
# Enable cloud analytics aggregation
